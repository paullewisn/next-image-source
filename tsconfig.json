{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "module": "ES6",
    "rootDir": ".",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./index.d.ts", "src/**/*"],
  "exclude": ["src/**/*.types.ts"]
}
